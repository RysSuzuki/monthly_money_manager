<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-lg-6">
        <h1>サブスクリプションの登録</h1>
        <% if @service.errors.any? %>
          <h2><%= @service.errors.count %>件のエラーがあります。</h2>
        <ul>
            <% @service.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
          <%= form_with(model: @service, local: true ) do |form| %>
            <div class="form-group">
              <%= form.label :name %><br>
              <%= form.text_field :name ,class:'form-control'%>
            </div>
            <div class="form-group">
              <%= form.label :money %><br>
              <%= form.text_field :money ,class:'form-control'%>
            </div>
            <div class="form-group">
              <%= form.label :"アイコン" %><br>
              <%= form.file_field :icon ,class:'form-control'%>
            </div>
            <div class="form-group">
              <%= form.label :details %><br>
              <%= form.text_area :details ,class:'form-control',rows:'3' %>
            </div>
            <%= form.submit "登録" ,class:'btn btn-primary'%>
          <% end %>
        <%= link_to "一覧画面にもどる", services_path%>
    </div>
    <div class="col"></div>
  </div>
</div>