<% if @service.errors.any? %>
    <h2><%= @service.errors.count %>件のエラーがあります。</h2>
    <ul>
        <% @service.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
    <div class="container-fluid">
        <%= form_with(model: @service, local: true ) do |form| %>
            <div class="form-group">
                <%= form.label :name %><br>
                <%= form.text_field :name %>
            </div>
            <div class="form-group">
                <%= form.label :money %><br>
                <%= form.text_field :money %>
            </div>
            <div class="form-group">
                <%= form.label :details %><br>
                <%= form.text_area :details %>
            </div>
                <%= form.submit class:'btn btn-default'%>
        <% end %>
  </div>
<br>
    <%= link_to "一覧画面にもどる", services_path%>