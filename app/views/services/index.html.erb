<div class="container">
<h1>サブスクリプション一覧</h1>
    <div class="row">
        <% @services.each do |service| %>
        <div class="col-md-6 col-lg-4">
            <div class="card bg-light border-info mt-1" >
                <div class="card-body p-3">
                    <h5 class="card-text">
                        <%= image_tag service.icon.to_s ,class:"mr-3",height:"40px"%>
                        <%= service.name %>
                    </h5>
                    <p>金額：<%= service.money %>円</p>
                    <%= link_to "Review", service_path(service.id) ,class: "btn btn-primary btn-sm"%>
                    <% if admin?%>
                        <%= link_to 'Delete', service_path(service.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger btn-sm' %>
                    <% end %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
