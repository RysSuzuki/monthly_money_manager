<% if @services.present? %>
    <table border="1">
        <tr>
            <td></td>
            <td>名前</td>
            <td>金額</td>
        </tr>
    <% @services.each do |service| %>
        <tr>
            <td><input class="uk-radio" type="radio" name="radio_group" value=<%= service.id %> ></td>
            <td><%= service.name %></td>
            <td><%= service.money %></td>
        </tr>
    <% end %>
    </table>
<% else%>
<p>該当が存在しません。</p>
<% end %>